        <TextBox FontSize="15" HorizontalAlignment="Left" Margin="399,56,0,-85" Text="Unesite ime" VerticalAlignment="Top" RenderTransformOrigin="0.486,0.625" Width="286" Height="29" TextChanged="TextBox_TextChanged_1"/>
        <TextBox FontSize="15" HorizontalAlignment="Left" Margin="399,103,0,-132" Text="Unesite prezime" VerticalAlignment="Top" RenderTransformOrigin="0.486,0.625" Width="286" Height="29"/>
        <TextBox FontSize="15" HorizontalAlignment="Left" Margin="399,150,0,-179" Text="Unesite email adresu" VerticalAlignment="Top" RenderTransformOrigin="0.486,0.625" Width="286" Height="29"/>
        <TextBox FontSize="15" HorizontalAlignment="Left" Margin="399,338,0,-367" Text="Unesite adresu stanovanja" VerticalAlignment="Top" RenderTransformOrigin="0.486,0.625" Width="286" Height="29"/>
