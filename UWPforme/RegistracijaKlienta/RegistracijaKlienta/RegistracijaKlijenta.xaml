        <ComboBox HorizontalAlignment="Left" Margin="399,244,0,-276" VerticalAlignment="Top" Width="286"/>
        <ComboBox HorizontalAlignment="Left" Margin="399,291,0,-323" VerticalAlignment="Top" Width="286"/>

